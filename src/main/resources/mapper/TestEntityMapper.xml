<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thunder.money.mapper.TestMapper">

    <resultMap id="BaseResultMap" type="com.thunder.money.entity.TestEntity" >
        <result column="name" property="name" />
        <result column="birthday" property="birthday" />
        <result column="createTime" property="createTime" />
        <result column="editTime" property="editTime" />
    </resultMap>

    <sql id="Base_Column_List">
                id,
                name,
                birthday,
                createTime,
                editTime
    </sql>
<!--使用useGeneratedKeys="true"，该insert方法的返回值为1或者0，但是调用对象的getid方法可以得到插入记录的id-->
    <insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="id" parameterType="com.thunder.money.entity.TestEntity">
        INSERT INTO test_love
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test ='null != name'>
                name,
            </if>
            <if test ='null != birthday'>
                birthday,
            </if>
            <if test ='null != createTime'>
                createTime,
            </if>
            <if test ='null != editTime'>
                editTime
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test ='null != name'>
                #{name},
            </if>
            <if test ='null != birthday'>
                #{birthday},
            </if>
            <if test ='null != createTime'>
                #{createTime},
            </if>
            <if test ='null != editTime'>
                #{editTime}
            </if>
        </trim>
    </insert>

    <delete id="delete" >
        DELETE FROM test_love
        WHERE id = #{id}
    </delete>

    <update id="update" parameterType="com.thunder.money.entity.TestEntity">
        UPDATE test_love
        <set>
            <if test ='null != name'>name = #{name},</if>
            <if test ='null != birthday'>birthday = #{birthday},</if>
            <if test ='null != createTime'>createTime = #{createTime},</if>
            <if test ='null != editTime'>editTime = #{editTime}</if>
        </set>
        WHERE id = #{id}
    </update>


    <select id="getOneByXml" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM test_love
        WHERE id = #{id}
    </select>

    <select id="pageList" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM test_love
        LIMIT #{offset}, #{pageSize}
    </select>

    <select id="pageListCount" resultType="java.lang.Integer">
        SELECT count(1)
        FROM test_love
    </select>

    <select id="getAllByXml" resultMap="BaseResultMap">
        select * from test_love
    </select>


</mapper>